{
  "manifest_version": 3,
  "name": "Persistent Todo List",
  "version": "1.2",
  "description": "A browser extension to keep a todo list always visible.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
 
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
